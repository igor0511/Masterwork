<script>

  function ScroolTo(Object,direction) {
    var scroll;
    if (direction === "right"){
      scroll = "+=400%";  
    }
    else {
      scroll = "-=400%";      
    }
     jQuery('.show-grid').animate({
      scrollLeft: scroll
    }, "slow");
  }
  
  function GoToPage(){
    var CurrentElement = jQuery('.Active');
    window.location.href = CurrentElement.find('a').attr('href');
   
  }
  
jQuery(document).ready(function() {
  
  jQuery(document).bind('keydown',function(e) {
      switch(e.which) {
          case 37: MoveElement("left");
          break;

          case 38: // up
          break;

          case 39: MoveElement("right");
          break;

          case 40: // down
          break;
          
          case 13: GoToPage(); 
          break;

          default: return; // exit this handler for other keys
      }
      e.preventDefault(); // prevent the default action (scroll / move caret)
  });
  
 
});

  function MoveElement(direction) {
      var CurrentElement = jQuery(".Active");
      var NextElement;
      CurrentElement.removeClass("Active");      
      if (direction === "right") {
          NextElement = CurrentElement.next();
          if (!NextElement.hasClass('inner')) {
            
              while (CurrentElement.prev().hasClass('inner')){             
                  NextElement = CurrentElement.prev();
                  CurrentElement = CurrentElement.prev();
              }
          }

      } 
      else {
          NextElement = CurrentElement.prev();
          if ( !NextElement.hasClass('inner')) {
            while(CurrentElement.next().hasClass('inner')) {
              NextElement =  CurrentElement.next();
              CurrentElement = CurrentElement.next();
            }            
          }   
      }      
      NextElement.addClass("Active");        
      ScroolTo(NextElement,direction);
  }
  
   
  jQuery('.AlbumName').click(function(){
       //alert('singleAlbum.cgi?AlbumName='+jQuery(this).html());
       window.location='singleAlbum.cgi?AlbumName='+jQuery(this).html();
  });


</script>